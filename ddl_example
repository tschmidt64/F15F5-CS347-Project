drop view F15F5_emp_view;
drop view F15F5_exec_view;
drop view F15F5_chairp_view;
drop view F15F5_ldir_view;
drop view F15F5_admin_view;

create view F15F5_emp_view as
SELECT
    emp_id,
    emp_status,
    emp_email,
    emp_lab,
    emp_name,
    emp_office,
    emp_phone,
    status_eff_date,
    F15F5_Auth_auth_id,
    F15F5_Lab_lab_id,
    emp_type
FROM F15F5_Emp where type = 'Employee';

create or replace TRIGGER F15F5_emp_trigger
     INSTEAD OF insert ON F15F5_emp_view
     FOR EACH ROW
BEGIN
    insert into F15F5_Emp(
		emp_id,
		emailql
		office_no,
		phone,
		emp_status,
		status_eff_date,
		type,
		F15F5_Lab_lab_id,
		F15F5_Auth_auth_id,
		emp_name)
		 VALUES (
		:NEW.emp_id,
		:NEW.email,
		:NEW.office_no,
		:NEW.phone,
		:NEW.emp_status,
		:NEW.status_eff_date,
		'Employee',
		:NEW.F15F5_Lab_lab_id,
		:NEW.F15F5_Auth_auth_id,
		:NEW.emp_name
		);
END;
/

